{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "../dist/server",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./**/*",
    "../src/lib/**/*",
    "../src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "../dist",
    "../src/components/**/*",
    "../src/pages/**/*",
    "../src/routes/**/*",
    "../src/hooks/**/*",
    "../src/main.tsx",
    "../src/index.css",
    "../src/lib/database/debug.ts",
    "../src/lib/api/**/*"
  ]
}
